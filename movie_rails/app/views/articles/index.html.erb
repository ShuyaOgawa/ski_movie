<p id="notice"><%= notice %></p>

<h1>Movie</h1>

<table>
  <thead>
    <tr>
      <th>名前</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <!-- <td><%= article.video %></td> -->
        <td><%= link_to '動画を見る', article %></td>
        <td><%= link_to 'ファイル修正', edit_article_path(article) %></td>
        <td><%= link_to '削除', article, method: :delete, data: { confirm: 'このファイルを削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

